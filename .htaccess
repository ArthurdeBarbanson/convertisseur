# protect the htaccess file
<files .htaccess>
    order allow,deny
    deny from all
</files>

#redirection https
RewriteEngine On
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://convertisseur.monserver.ovh/$1 [R,L]

#ErrorDocument 404 /erreur404.php

#compression gzip
SetOutputFilter DEFLATE
AddOutputFilterByType DEFLATE text/html text/php text/css text/plain text/xml application/x-javascript image/png